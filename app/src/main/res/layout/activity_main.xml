<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/layoutAnhVe"
            android:background="@drawable/tongs"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/imgVeAnhNen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:id="@+id/imgVeAnhNhanVat"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:id="@+id/imgVeAnhMu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:id="@+id/imgVeAnhQuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:id="@+id/imgVeAnhPet"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:id="@+id/imgVeAnhVote"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imgDownload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/downloading"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="#939393"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgNenAnh"
                    android:background="#FFEB3B"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/z1"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgChonNhanVat"
                    android:background="#FFF"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/x12"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgMu"
                    android:background="#FFF"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/v121"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgQuan"
                    android:background="#FFF"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/n2"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgPet"
                    android:background="#FFF"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/m1"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgVote"
                    android:background="#FFF"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/l3"
                    android:padding="4dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <GridView
                android:id="@+id/gdvChonItem"
                android:numColumns="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>